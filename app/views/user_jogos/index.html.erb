<p id="notice"><%= notice %></p>
<% provide(:title, "Jogos de usuario") %>
<h1>Cadastro de usuario para jogos</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Jogo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_jogos.each do |user_jogo| %>
      <tr>
       <% User.all.each do |usuario| %>
            <% if(usuario.id == user_jogo.user_id)%>
              <td><%= usuario.nome%></td>
            <% end %>
        <% end %>
       <% Jogo.all.each do |game| %>
            <% if(game.id == user_jogo.jogo_id)%>
              <td><%= game.nome%></td>
            <% end %>
        <% end %>
        <td><%= link_to 'Show', user_jogo %></td>
        <td><%= link_to 'Edit', edit_user_jogo_path(user_jogo)%></td>
        <td><%= link_to 'Destroy', user_jogo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'Novo cadastro de jogo_usuario', new_user_jogo_path, class:"botao" %>
