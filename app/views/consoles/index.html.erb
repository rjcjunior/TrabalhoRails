<p id="notice"><%= notice %></p>

<h1>Consoles</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Preco</th>
      <th>Midia</th>
      <th>Fabricante</th>
      <th>Lancamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consoles.each do |console| %>
      <tr>
        <td><%= console.nome %></td>
        <td><%= console.preco %></td>
        <td><%= console.midia %></td>
        <td><%= console.fabricante %></td>
        <td><%= console.lancamento %></td>
        <td><%= link_to 'Show', console %></td>
        <td><%= link_to 'Edit', edit_console_path(console) %></td>
        <td><%= link_to 'Destroy', console, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

